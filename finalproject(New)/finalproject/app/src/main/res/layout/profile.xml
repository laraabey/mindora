<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general"
    >

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- User Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/profile"
                    android:padding="8dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Your Name"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/editProfileBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="editprofile"
                    android:focusable="true"
                    android:padding="12dp"
                    android:text="Edit Profile"
                    android:textColor="@color/text_accent"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Emergency Contact Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/addContactButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="addContact"
                    android:layout_marginLeft="190dp"
                    />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/contactListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="8dp">
                </LinearLayout>


                <Button
                    android:id="@+id/callEmergencyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/crisis_button"
                    android:elevation="4dp"
                    android:text="📞 Call Now (Emergency)"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Crisis Mode Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="⚠️"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crisis Support"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instant access to crisis support and safety features"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/crisisModeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/crisis_button"
                    android:elevation="2dp"
                    android:text="🆘 Activate Crisis Mode"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Additional Profile Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:id="@+id/privacySettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:onClick="privacySettings"
                    android:focusable="true"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="🔒"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy and Safety"
                        android:textColor="@color/text_settings"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="▶"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/logout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="135dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Log Out" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="390dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_card"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:layout_marginLeft="10dp"
        >

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="navhome"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Discover -->
        <LinearLayout
            android:id="@+id/navDiscover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="navdiscover"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/discover"
                android:contentDescription="Discover" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Community -->
        <LinearLayout
            android:id="@+id/navCommunity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="navcommunity"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/community"
                android:contentDescription="Community" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Journal -->
        <LinearLayout
            android:id="@+id/navJournal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="navjournal"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/journal"
                android:contentDescription="Journal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="navprofile"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:textColor="@color/selected"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
