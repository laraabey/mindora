<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ·ï¸ Dashboard Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#2A194D"
            android:layout_marginBottom="20dp" />

        <!-- ðŸŒŸ TOP 3 MEDIA -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 3 Media"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/mediaNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Media Name"
                android:backgroundTint="#7B1FA2" />

            <EditText
                android:id="@+id/mediaLinkInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Media Link"
                android:backgroundTint="#7B1FA2"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/addMediaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Media"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ðŸ§˜ GROUNDING EXERCISE -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grounding Exercise"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/groundNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Exercise Name"
                android:backgroundTint="#7B1FA2" />

            <EditText
                android:id="@+id/groundLinkInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Exercise Link"
                android:backgroundTint="#7B1FA2"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/addGroundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Grounding Exercise"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ðŸ’¬ QUOTES -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quotes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/quoteInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Quote"
                android:backgroundTint="#7B1FA2" />

            <Button
                android:id="@+id/addQuoteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Quote"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ðŸŽµ MUSIC -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/musicNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Music Name"
                android:backgroundTint="#7B1FA2" />

            <Button
                android:id="@+id/selectMusicImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Picture"
                android:layout_marginTop="8dp"
                android:backgroundTint="#BA68C8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/selectMusicAudioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Audio File"
                android:layout_marginTop="8dp"
                android:backgroundTint="#BA68C8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/addMusicButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Music"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- ðŸ”Š AUDIO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/audioNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Audio Name"
                android:backgroundTint="#7B1FA2" />

            <Button
                android:id="@+id/selectAudioFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Audio File"
                android:layout_marginTop="8dp"
                android:backgroundTint="#BA68C8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/addAudioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Audio"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- ðŸŽ¬ VIDEO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4A148C"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/videoNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Video Name"
                android:backgroundTint="#7B1FA2" />

            <Button
                android:id="@+id/selectVideoImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Thumbnail"
                android:layout_marginTop="8dp"
                android:backgroundTint="#BA68C8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/selectVideoFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Video File"
                android:layout_marginTop="8dp"
                android:backgroundTint="#BA68C8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/addVideoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Video"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
