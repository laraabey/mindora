<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBackAdminMusic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Music"
                android:textSize="20sp"
                android:textColor="#1D1D42"
                android:gravity="center"
                android:textStyle="bold"/>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <!-- Music Name -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music Name"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etMusicName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter music name"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textColorHint="@color/dark_gray"
                    android:background="@null"
                    android:inputType="text"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Genre -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinnerMusicGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Select Music File Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectMusicFile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Select Music File"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/shape_banner_wave"
            app:backgroundTint="@null"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Selected File Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected File"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMusicFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvMusicDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration: --:--"
                    android:textSize="14sp"
                    android:textColor="#6B4EE6"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upload Progress -->
        <ProgressBar
            android:id="@+id/progressBarMusicUpload"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:progressTint="#6B4EE6"/>

        <!-- Upload Button -->
        <Button
            android:id="@+id/btnSubmitMusic"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Upload Music"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>
