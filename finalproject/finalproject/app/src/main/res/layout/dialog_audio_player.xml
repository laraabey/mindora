<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Now Playing"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <ImageButton
                android:id="@+id/btnClosePlayer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                app:tint="#1D1D42"/>
        </LinearLayout>

        <!-- Audio Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_audio_wave"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:tint="#6B4EE6"/>

        <!-- Audio Name -->
        <TextView
            android:id="@+id/tvPlayerAudioName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation Audio"
            android:textSize="20sp"
            android:textColor="#1D1D42"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:progressTint="#6B4EE6"
            android:thumbTint="#6B4EE6"/>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/btnBackward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_backward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Backward"
                app:tint="#1D1D42"/>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/circular_button"
                android:contentDescription="Play/Pause"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:tint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_forward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Forward"
                app:tint="#1D1D42"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>