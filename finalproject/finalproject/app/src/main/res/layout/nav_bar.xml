<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavigation"
    android:layout_width="390dp"
    android:layout_height="68dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/rounded_card"
    android:layout_marginTop="655dp"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:layout_marginLeft="10dp"
    >

    <!-- Home -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="navhome"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Discover -->
    <LinearLayout
        android:id="@+id/navDiscover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="navdiscover"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/discover"
            android:contentDescription="Discover" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Community -->
    <LinearLayout
        android:id="@+id/navCommunity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="navcommunity"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/community"
            android:contentDescription="Community" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Journal -->
    <LinearLayout
        android:id="@+id/navJournal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="navjournal"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/journal"
            android:contentDescription="Journal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="navprofile"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"
            android:contentDescription="Profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="10sp"
            android:textColor="@color/selected"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>