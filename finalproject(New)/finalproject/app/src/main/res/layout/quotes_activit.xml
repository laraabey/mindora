<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_calm_gradient">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:padding="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp" />


    <!-- Top bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:title="Mindful Quotes"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:background="@android:color/transparent"
        app:navigationIconTint="?attr/colorOnBackground"
        app:titleTextColor="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quote Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQuote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:strokeColor="#22FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="22dp">

            <!-- Decorative opening quote -->
            <TextView
                android:id="@+id/decorOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“"
                android:textSize="64sp"
                android:textStyle="bold"
                android:alpha="0.06"
                android:translationY="-6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Scroll area for long quotes -->
            <ScrollView
                android:id="@+id/scrollQuote"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fadingEdgeLength="12dp"
                android:requiresFadingEdge="vertical"
                app:layout_constraintTop_toBottomOf="@id/decorOpen"
                app:layout_constraintBottom_toTopOf="@id/tvAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It’s okay not to be okay. Healing isn’t linear—take it one gentle step at a time."
                    android:textSize="22sp"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center" />
            </ScrollView>

            <!-- Author -->
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="— Unknown"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="14dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/chips"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Mental-health tags -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:singleLine="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist"
                    android:id="@+id/chipMindfulness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness"
                    android:contentDescription="Tag: Mindfulness" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist"
                    android:id="@+id/chipSelfCare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self-care"
                    android:contentDescription="Tag: Self-care" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist"
                    android:id="@+id/chipResilience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resilience"
                    android:contentDescription="Tag: Resilience" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Decorative closing quote -->
            <TextView
                android:id="@+id/decorClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="”"
                android:textSize="64sp"
                android:textStyle="bold"
                android:alpha="0.06"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:contentDescription="Show previous quote" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShuffle"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shuffle"
            android:contentDescription="Show a random quote" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:contentDescription="Show next quote" />
    </LinearLayout>

    <!-- Quick actions -->
    <LinearLayout
        android:id="@+id/quickActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/controls"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:contentDescription="Share quote" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopy"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:contentDescription="Copy quote" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
